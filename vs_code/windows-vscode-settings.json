{
  // Enable/Disable ActiveFileInStatusBar
  "ActiveFileInStatusBar.enable": true,
  // Show fullpath or relative path in status bar.
  "ActiveFileInStatusBar.fullpath": true,
  // Reveal the active file in the file system. 
  "ActiveFileInStatusBar.revealFile": false,
  "debug.console.fontFamily": "FiraCode-Retina",
  "editor.detectIndentation": false,
  "editor.formatOnPaste": true,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.rulers": [
    80,
    120
  ],
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  // "editor.fontFamily": "Consolas, 'Courier New', monospace",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "erb": "html",
    "jsx": "html",
    "jsx": "js",
  },
  "[erb]": {},
  "files.associations": {
    "*.erb": "erb",
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
  },
  "files.autoSave": "afterDelay",
  "html-css-class-completion.enableEmmetSupport": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "jshint.options": {
    "esversion": 6
  },
  "launch": {
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Local Node File",
        "console": "integratedTerminal",
        "program": "${file}"
      },
      {
        "name": "Launch index.html",
        "type": "chrome",
        "request": "launch",
        "file": "${workspaceFolder}/index.html"
      }
    ]
  },
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\wsl.exe",
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Oceanic Next (Sublime)",
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#eeff00",
    "editor.foldBackground": "#355000"
  },
  "workbench.panel.defaultLocation": "right",
  "workbench.startupEditor": "newUntitledFile",
  
  "lastSetting": "noComma"
}